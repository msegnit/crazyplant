<%- include('../partials/header') %>

<section id="show-page">
  <table>
    <thead>
      <tr>
        <th>Plant:</th>
        <th><%= plant.plantName %></th>
        <th>Lighting:</th>
        <th><%= plant.lighting %></th>
        <th>Environment:</th>
        <th><%= plant.environment %></th>
      </tr>
    </thead>
    </table>
</section>
<br>
<form method="POST" action="/reviews/plants/<%= plant._id %>/reviews" <% if (!user) { %> hidden <% } %>>
  <label class="form-label">Review: <br>
  <textarea name="content" id="textbox"></textarea>
  <form method="GET" action="/plants/<%= plant._id %>/edit"><input type="submit" value="Add Review" class="button">
    <input type="submit" value="Edit" class="button"></label></form>
  </label> <br>
  <br> <br>

  
</form>
<% if (plant.reviews) { %>
  <% plant.reviews.forEach(function(r){ %>
<div class="row">
  <div class="col s12 m6">
    <div class="card grey darken-1">
      <div class="card-content white-text">
        <span class="card-title">Review</span>
        <p><%=  r.content %></p>
      </div>
    </div>
  </div>
</div>
<% }); %>
<% }%>


<%- include('../partials/footer') %>